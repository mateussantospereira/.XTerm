! Configuração do XTerm
! Mateus dos Santos Pereira

xterm*utf8:2
xterm*eightBitInput:true
xterm*locale:true
xterm*metaSendsEscape:true
xterm*toolBar:false

! Fonte 
! ----------------------
!xterm*font:     *-fixed-*-*-*-21-*
!xterm*faceName:Terminus:style=Regular:size=17
xterm*faceName:Ubuntu Mono:style=Regular:size=17
!xterm*faceName::TerminusTTF-4.46.0.ttf:style=Medium:size=16
!xterm*font:-*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*
! ----------------------

! Scroll Bar 
! ----------------------
xterm*saveLines:2000
xterm*scrollKey:true
xterm*scrollTtyOutput:false
xterm*scrollBar:true
xterm*rightScrollBar:true
xterm*jumpScroll:true
xterm*multiScroll:true
! ----------------------

! Cores 
! ----------------------
xterm*dynamicColors:true
xterm*termName:xterm-256color
xterm*Background:black
xterm*Foreground:white
xterm*cursorColor:white
xterm*color0:           #000000
!xterm*cursorColor:      #8ae234
xterm*colorUL:          #8ae234
xterm*underlineColor:   #92659a
! - Scariet Red -
xterm*color1:           #cc0000
xterm*color9:           #ef2929
! - Chameleon -
xterm*color2:           #4e9a06
xterm*color10:          #8ae234
! - Butter -
xterm*color3:           #edd400
xterm*color11:          #fce94f
! - Sky Blue -
xterm*color4:           #3465a4
xterm*color12:          #729fcf
! - Plum -
xterm*color5:           #92659a
xterm*color13:          #c19fbe
! - Cyan -
xterm*color6:           #07c7ca
xterm*color14:          #63e9e9
! ----------------------

! Copiar e colar
! ----------------------
XTerm*selectToClipboard: true
xterm*VT100.Translations: #override \
    Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>C:    copy-selection(CLIPBOARD) \n\
    Shift <KeyPress>Prior:  scroll-back(1,halfpage) \n\
    Shift <KeyPress>Next:  scroll-forw(1,halfpage) \n\
    <KeyPress>Prior:  scroll-back(1,page) \n\
    <KeyPress>Next:  scroll-forw(1,page) 

! ----------------------

